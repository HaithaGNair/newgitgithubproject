1pipeline {
   agent any
   stages {
       stage('Build') {
           steps {
               echo 'Building the project...'
           }
       }
       stage('Test') {
           steps {
               echo 'Running TestNG tests...'
              
               // Use dir() instead of cd → jenkins recommended way—>Jenkins Pipeline Step
               dir('C:/Users/ADMIN/eclipse-workspace') {
                   bat 'mvn test'
               }
           }
       }
   }
   post {
       success {
           echo 'Pipeline completed successfully!'
       }
       failure {
           echo 'Pipeline failed!'
       }
   }
}

